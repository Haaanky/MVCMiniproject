@model BeersIndexVM
@{
    ViewData["Title"] = "Beers/Index";
}
<div class="container d-flex justify-content-center">
    <h1>Beers/Index</h1>
</div>
<div class="container d-flex justify-content-center">
    <div class="">
    </div>
    <div class="">
        <ul>
            @foreach (var item in Model.BeersList)
            {
                <li>
                    <div class="container d-flex justify-content-center">
                        <div class="col-sm-9">
                            <h3>@item.Name</h3>
                        </div>
                        <div class="col-sm-1">
                            <a class="btn btn-outline-info btn-sm" asp-controller="beers" asp-action="details" asp-route-id=@item.Id>Info</a>
                        </div>
                        <div class="col-sm-3">
                            <a class="btn btn-outline-danger btn-sm" asp-controller="beers" asp-action="remove" asp-route-id=@item.Id>Delete beer</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>